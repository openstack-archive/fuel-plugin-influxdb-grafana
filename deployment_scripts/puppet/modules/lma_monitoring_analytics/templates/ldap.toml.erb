[[servers]]
host = <%= @ldap_servers %>
port = <%= @ldap_server_port %>

<% if @ldap_protocol == 'LDAPS' -%>

use_ssl = true

<% else -%>

use_ssl = false

<% end -%>

ssl_skip_verify = true
bind_dn = <%= @ldap_bind_dn %>
bind_password = <%= @ldap_bind_password %>
#search_filter = "(cn=%s)"
search_base_dns = [<%= @ldap_search_base_dn %>]
search_filter = <%= @ldap_search_filter %>

group_search_base_dns = [<%= @ldap_group_search_base_dns %>]
group_search_filter = <%= @ldap_group_search_filter %>

[servers.attributes]
name = "givenName"
surname = "sn"
username = "cn"
member_of = "cn"
email =  "email"

<% if @ldap_authorization_enabled -%>

[[servers.group_mappings]]
group_dn = <%= @ldap_admin_group_dn %>
org_role = "Admin"

[[servers.group_mappings]]
group_dn = <%= @ldap_viewer_group_dn %>
org_role = "Viewer"

<% else -%>

[[servers.group_mappings]]
group_dn = "*"
org_role = "Admin"

<% end -%>
