set -eux

INFLUXDB_URL="http://127.0.0.1:8086"

# Create the user
curl -G "${INFLUXDB_URL}/query" \
    --data-urlencode "u=root" \
    --data-urlencode "p=<%= @rootpass %>" \
    --data-urlencode "q=CREATE USER <%= @username %> WITH PASSWORD '<%= @userpass %>'"

# Create the database
curl -G "${INFLUXDB_URL}/query" \
    --data-urlencode "u=root" \
    --data-urlencode "p=<%= @rootpass %>" \
    --data-urlencode "q=CREATE DATABASE <%= @dbname %>"

# Give all privileges to user for the DB
curl -G "${INFLUXDB_URL}/query" \
    --data-urlencode "u=root" \
    --data-urlencode "p=<%= @rootpass %>" \
    --data-urlencode "q=GRANT ALL ON <%= @dbname %> TO <%= @username %>"

# Define the retentation policy
curl -G "${INFLUXDB_URL}/query" \
    --data-urlencode "u=root" \
    --data-urlencode "p=<%= @rootpass %>" \
    --data-urlencode "q=ALTER RETENTION POLICY default ON <%= @dbname %> DURATION <%= @real_retention_period %> REPLICATION <%= @real_replication_factor %>"
